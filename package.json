{
    "name": "coral-clash",
    "version": "1.0.0",
    "description": "Coral Clash Board Game",
    "main": "node_modules/expo/AppEntry.js",
    "private": true,
    "resolutions": {
        "expo-constants": "18.0.10"
    },
    "scripts": {
        "start": "cross-env REACT_EDITOR=code expo start",
        "android": "cross-env REACT_EDITOR=code expo start --android",
        "ios": "cross-env REACT_EDITOR=code expo start --ios",
        "ios:dev": "npx expo run:ios",
        "ios:device": "npx expo run:ios --device",
        "device:register": "eas device:create",
        "build:ios:sim": "eas build --profile development --platform ios --local",
        "build:ios:device": "eas build --profile development-device --platform ios",
        "build:ios:install": "eas build:run --profile development-device --platform ios",
        "build:android:sim": "eas build --profile development --platform android --local",
        "build:android:device": "eas build --profile development-device --platform android",
        "build:android:install": "eas build:run --profile development-device --platform android",
        "build:staging": "eas build --profile preview --platform all",
        "build:staging:ios": "eas build --profile preview --platform ios",
        "build:staging:android": "eas build --profile preview --platform android",
        "build:production": "eas build --profile production --platform all",
        "build:production:ios": "eas build --profile production --platform ios",
        "build:production:android": "eas build --profile production --platform android",
        "submit:staging": "eas submit --profile preview --platform all --latest",
        "submit:production": "eas submit --profile production --platform all --latest",
        "postinstall": "cd shared && yarn install && yarn build",
        "eject": "expo eject",
        "test": "node ./node_modules/jest/bin/jest.js --watchAll",
        "test:ci": "node ./node_modules/jest/bin/jest.js --watchAll=false --ci --passWithNoTests",
        "web": "npx http-server public -p 8080 -o"
    },
    "jest": {
        "preset": "jest-expo",
        "testPathIgnorePatterns": [
            "/node_modules/",
            "/functions/",
            "/shared/"
        ]
    },
    "dependencies": {
        "@react-native-async-storage/async-storage": "2.2.0",
        "@react-native-masked-view/masked-view": "0.3.2",
        "@react-navigation/drawer": "^7.6.0",
        "@react-navigation/native": "^7.1.18",
        "@react-navigation/stack": "^7.5.0",
        "expo": "54.0.20",
        "expo-application": "~7.0.7",
        "expo-asset": "~12.0.9",
        "expo-auth-session": "~7.0.8",
        "expo-constants": "~18.0.10",
        "expo-crypto": "~15.0.7",
        "expo-dev-client": "~6.0.16",
        "expo-device": "~8.0.9",
        "expo-font": "~14.0.9",
        "expo-linear-gradient": "~15.0.7",
        "expo-notifications": "^0.32.12",
        "expo-splash-screen": "~31.0.10",
        "expo-updates": "~29.0.12",
        "expo-web-browser": "~15.0.8",
        "firebase": "^12.4.0",
        "galio-framework": "^0.9.5",
        "react": "19.1.0",
        "react-native": "0.81.5",
        "react-native-gesture-handler": "~2.28.0",
        "react-native-modal-dropdown": "1.0.2",
        "react-native-reanimated": "~4.1.3",
        "react-native-safe-area-context": "~5.6.1",
        "react-native-screens": "~4.16.0",
        "react-native-super-grid": "^6.0.2",
        "react-native-svg": "15.12.1",
        "react-native-vector-icons": "^10.3.0",
        "react-native-worklets": "0.5.1",
        "typescript": "~5.9.3"
    },
    "devDependencies": {
        "@babel/core": "^7.28.5",
        "@babel/preset-env": "^7.28.5",
        "@types/jest": "^29.5.14",
        "@types/moment-duration-format": "^2.2.7",
        "@types/react": "~19.1.10",
        "babel-preset-expo": "~54.0.6",
        "cross-env": "^10.1.0",
        "dotenv": "^17.2.3",
        "jest": "^29.7.0",
        "jest-expo": "~54.0.13",
        "prettier": "^3.6.2",
        "react-dom": "19.1.0",
        "react-refresh": "^0.18.0",
        "typescript": "~5.9.3"
    }
}
