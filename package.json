{
    "name": "coral-clash",
    "version": "1.0.0",
    "description": "Coral Clash Board Game",
    "main": "node_modules/expo/AppEntry.js",
    "private": true,
    "scripts": {
        "start": "cross-env REACT_EDITOR=code expo start",
        "android": "cross-env REACT_EDITOR=code expo start --android",
        "ios": "cross-env REACT_EDITOR=code expo start --ios",
        "ios:dev": "npx expo run:ios",
        "ios:device": "npx expo run:ios --device",
        "device:register": "eas device:create",
        "build:ios:sim": "eas build --profile development --platform ios --local",
        "build:ios:device": "eas build --profile development-device --platform ios",
        "build:install": "eas build:run --profile development-device --platform ios",
        "eject": "expo eject",
        "test": "node ./node_modules/jest/bin/jest.js --watchAll",
        "test:ci": "node ./node_modules/jest/bin/jest.js --watchAll=false --ci"
    },
    "jest": {
        "preset": "jest-expo",
        "testPathIgnorePatterns": [
            "/node_modules/",
            "/functions/"
        ]
    },
    "dependencies": {
        "@react-native-async-storage/async-storage": "2.2.0",
        "@react-native-masked-view/masked-view": "0.3.2",
        "@react-navigation/drawer": "^7.0.2",
        "@react-navigation/native": "^7.0.10",
        "@react-navigation/stack": "^7.1.1",
        "@types/react": "~19.1.10",
        "expo": "54.0.15",
        "expo-application": "~7.0.7",
        "expo-asset": "~12.0.9",
        "expo-auth-session": "~7.0.8",
        "expo-constants": "~18.0.9",
        "expo-crypto": "~15.0.7",
        "expo-dev-client": "~6.0.15",
        "expo-device": "~8.0.9",
        "expo-font": "~14.0.9",
        "expo-linear-gradient": "~15.0.7",
        "expo-notifications": "^0.32.12",
        "expo-splash-screen": "~31.0.10",
        "expo-updates": "~29.0.12",
        "expo-web-browser": "~15.0.8",
        "firebase": "^12.4.0",
        "galio-framework": "^0.8.0",
        "react": "19.1.0",
        "react-native": "0.81.4",
        "react-native-gesture-handler": "~2.28.0",
        "react-native-modal-dropdown": "1.0.2",
        "react-native-reanimated": "~4.1.1",
        "react-native-safe-area-context": "~5.6.0",
        "react-native-screens": "~4.16.0",
        "react-native-super-grid": "^6.0.1",
        "react-native-svg": "15.12.1",
        "react-native-vector-icons": "^10.2.0",
        "react-native-worklets": "^0.5.0",
        "typescript": "~5.9.2"
    },
    "devDependencies": {
        "@babel/core": "^7.25.9",
        "@babel/preset-env": "^7.25.9",
        "@expo/webpack-config": "^19.0.1",
        "@types/jest": "^29.5.14",
        "@types/moment-duration-format": "^2.2.6",
        "@types/react": "~19.1.10",
        "babel-preset-expo": "~54.0.0",
        "cross-env": "^7.0.3",
        "dotenv": "^16.4.7",
        "jest": "^29.7.0",
        "jest-expo": "~54.0.0",
        "prettier": "^3.4.1",
        "react-dom": "19.1.0",
        "react-refresh": "^0.14.2",
        "typescript": "~5.9.2",
        "webpack": "^5.97.1"
    }
}
