{
    "name": "coral-clash",
    "version": "1.0.3",
    "description": "Coral Clash Board Game",
    "main": "node_modules/expo/AppEntry.js",
    "private": true,
    "resolutions": {
        "expo-constants": "~18.0.12"
    },
    "scripts": {
        "start": "cross-env REACT_EDITOR=code expo start",
        "android": "cross-env REACT_EDITOR=code expo start --android",
        "ios": "cross-env REACT_EDITOR=code expo start --ios",
        "ios:dev": "npx expo run:ios",
        "ios:device": "npx expo run:ios --device",
        "prebuild:ios": "npx expo prebuild --platform ios --clean",
        "prebuild:android": "npx expo prebuild --platform android --clean",
        "prebuild:all": "npx expo prebuild --clean",
        "build:staging:ios": "bundle exec fastlane ios beta",
        "build:staging:android": "bundle exec fastlane android beta",
        "build:production:ios": "bundle exec fastlane ios release",
        "build:production:android": "bundle exec fastlane android release",
        "build:ios": "bundle exec fastlane ios build",
        "build:android": "bundle exec fastlane android build",
        "dev:link": "cd shared && yarn link && cd .. && yarn link @jbuxofplenty/coral-clash",
        "dev:unlink": "yarn unlink @jbuxofplenty/coral-clash && yarn install --force",
        "eject": "expo eject",
        "lint": "eslint .",
        "lint:fix": "eslint . --fix",
        "lint:src": "eslint src/",
        "lint:src:fix": "eslint src/ --fix",
        "test": "node ./node_modules/jest/bin/jest.js --watchAll",
        "test:ci": "node ./node_modules/jest/bin/jest.js --watchAll=false --ci --passWithNoTests",
        "web": "npx http-server public -p 8080 -o",
        "prepare": "husky",
        "retag:v1.0.0": "git tag -d v1.0.0 && git push origin :refs/tags/v1.0.0 && git tag v1.0.0 && git push origin v1.0.0",
        "tag:patch": "npm version patch --no-git-tag-version && git add package.json && git commit -m \"chore(release): bump version to v$(node -p \\\"require('./package.json').version\\\")\" && git tag v$(node -p \"require('./package.json').version\") && git push origin main --tags",
        "tag:minor": "npm version minor --no-git-tag-version && git add package.json && git commit -m \"chore(release): bump version to v$(node -p \\\"require('./package.json').version\\\")\" && git tag v$(node -p \"require('./package.json').version\") && git push origin main --tags",
        "tag:major": "npm version major --no-git-tag-version && git add package.json && git commit -m \"chore(release): bump version to v$(node -p \\\"require('./package.json').version\\\")\" && git tag v$(node -p \"require('./package.json').version\") && git push origin main --tags"
    },
    "jest": {
        "preset": "jest-expo",
        "testPathIgnorePatterns": [
            "/node_modules/",
            "/functions/",
            "/shared/"
        ]
    },
    "lint-staged": {
        "*.{js,jsx,ts,tsx}": [
            "eslint --max-warnings=0"
        ]
    },
    "dependencies": {
        "@jbuxofplenty/coral-clash": "^2.5.0",
        "@react-native-async-storage/async-storage": "2.2.0",
        "@react-native-firebase/analytics": "^23.5.0",
        "@react-native-firebase/app": "^23.5.0",
        "@react-native-google-signin/google-signin": "^16.0.0",
        "@react-native-masked-view/masked-view": "0.3.2",
        "@react-navigation/drawer": "^7.6.0",
        "@react-navigation/native": "^7.1.18",
        "@react-navigation/stack": "^7.5.0",
        "expo": "~54.0.30",
        "expo-apple-authentication": "~8.0.8",
        "expo-application": "~7.0.8",
        "expo-asset": "~12.0.12",
        "expo-constants": "~18.0.12",
        "expo-crypto": "~15.0.8",
        "expo-dev-client": "~6.0.20",
        "expo-device": "~8.0.10",
        "expo-font": "~14.0.10",
        "expo-linear-gradient": "~15.0.8",
        "expo-notifications": "~0.32.15",
        "expo-splash-screen": "~31.0.13",
        "expo-tracking-transparency": "~6.0.8",
        "expo-updates": "~29.0.15",
        "firebase": "^12.4.0",
        "galio-framework": "^0.9.5",
        "react": "19.1.0",
        "react-native": "0.81.5",
        "react-native-gesture-handler": "~2.28.0",
        "react-native-google-mobile-ads": "^16.0.0",
        "react-native-keyboard-aware-scroll-view": "^0.9.5",
        "react-native-modal-dropdown": "1.0.2",
        "react-native-reanimated": "~4.1.3",
        "react-native-safe-area-context": "~5.6.1",
        "react-native-screens": "~4.16.0",
        "react-native-size-matters": "^0.4.2",
        "react-native-super-grid": "^6.0.2",
        "react-native-svg": "15.12.1",
        "react-native-vector-icons": "^10.3.0",
        "react-native-worklets": "0.5.1",
        "typescript": "~5.9.3"
    },
    "devDependencies": {
        "@babel/core": "^7.28.5",
        "@babel/preset-env": "^7.28.5",
        "@commitlint/cli": "^20.1.0",
        "@commitlint/config-conventional": "^20.0.0",
        "@types/jest": "^29.5.14",
        "@types/moment-duration-format": "^2.2.7",
        "@types/react": "~19.1.10",
        "@typescript-eslint/eslint-plugin": "^8.46.2",
        "@typescript-eslint/parser": "^8.46.2",
        "babel-preset-expo": "~54.0.9",
        "baseline-browser-mapping": "^2.9.11",
        "cross-env": "^10.1.0",
        "dotenv": "^17.2.3",
        "eslint": "^9.38.0",
        "eslint-config-expo": "^10.0.0",
        "eslint-config-prettier": "^10.1.8",
        "eslint-plugin-react": "^7.37.5",
        "eslint-plugin-react-hooks": "^7.0.1",
        "eslint-plugin-react-native": "^5.0.0",
        "expo-build-properties": "~1.0.10",
        "husky": "^9.1.7",
        "jest": "^29.7.0",
        "jest-expo": "~54.0.16",
        "lint-staged": "^16.2.6",
        "prettier": "^3.6.2",
        "react-dom": "19.1.0",
        "react-refresh": "^0.18.0",
        "typescript": "~5.9.3"
    },
    "packageManager": "yarn@1.22.22+sha1.ac34549e6aa8e7ead463a7407e1c7390f61a6610"
}
