{
    "name": "functions",
    "description": "Cloud Functions for Coral Clash",
    "scripts": {
        "serve": "yarn build:shared && yarn copy:shared && firebase emulators:start --only functions",
        "shell": "firebase functions:shell",
        "start": "yarn shell",
        "deploy": "yarn build:shared && yarn copy:shared && firebase deploy --only functions",
        "logs": "firebase functions:log",
        "build:shared": "cd ../shared && yarn build",
        "copy:shared": "rm -rf shared && mkdir -p shared && cp -r ../shared/dist shared/",
        "test": "jest --coverage",
        "test:ci": "jest --coverage --watchAll=false --ci",
        "pretest": "yarn build:shared && yarn copy:shared"
    },
    "engines": {
        "node": "22"
    },
    "main": "index.js",
    "dependencies": {
        "@google-cloud/tasks": "^5.0.0",
        "@types/node": "^18.0.0",
        "firebase-admin": "^12.0.0",
        "firebase-functions": "^6.6.0",
        "ts-node": "^10.9.2",
        "typescript": "~5.9.2"
    },
    "devDependencies": {
        "firebase-functions-test": "^3.1.0",
        "jest": "^29.7.0"
    },
    "private": true
}
