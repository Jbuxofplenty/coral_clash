{
    "name": "functions",
    "type": "module",
    "description": "Cloud Functions for Coral Clash",
    "scripts": {
        "serve": "firebase emulators:start --only functions",
        "shell": "firebase functions:shell",
        "start": "yarn shell",
        "deploy": "firebase deploy --only functions",
        "logs": "firebase functions:log",
        "test": "jest --coverage",
        "test:ci": "jest --coverage --watchAll=false --ci",
        "dev:link": "cd ../shared && yarn link && cd ../functions && yarn link @jbuxofplenty/coral-clash",
        "dev:unlink": "yarn unlink @jbuxofplenty/coral-clash && yarn install --force"
    },
    "engines": {
        "node": ">=22"
    },
    "main": "index.js",
    "dependencies": {
        "@google-cloud/tasks": "^5.0.0",
        "@jbuxofplenty/coral-clash": "^1.7.0",
        "@types/node": "^18.0.0",
        "firebase-admin": "^12.0.0",
        "firebase-functions": "^6.6.0",
        "ts-node": "^10.9.2",
        "typescript": "~5.9.2"
    },
    "devDependencies": {
        "@babel/core": "^7.28.5",
        "@babel/preset-env": "^7.28.5",
        "babel-jest": "^30.2.0",
        "firebase-functions-test": "^3.1.0",
        "jest": "^29.7.0"
    },
    "private": true
}
